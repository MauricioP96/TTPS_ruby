<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Crear factura</h1>
	<%= form_for @bill, url:client_bills_path do |f| %>
		<div class='field'>
			<%= f.label :destinatario %><br>
			<%= f.text_field :receiver,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :monto %><br>
			<%= f.number_field :amount, :step => 0.01,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :fecha_de_emision %><br>
			<%= f.date_field :date,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :detalles %><br>
			<%= f.text_area(:details, {size: "30x20", :maxlength => 160,:required => true}) %>
		</div>
		<div class='actions'>
		<%= f.submit 'Registrar' %>
		</div>

		<%= link_to 'Atras', client_bills_path %>
	<% end %>
</body>
</html>