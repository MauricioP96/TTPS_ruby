<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Modificar factura</h1>
	<button><%= link_to 'Atras', client_bills_path %></button>
	<%= form_for @bill, url:client_bill_path do |f| %>
		<fieldset>
		<legend>Datos de la factura</legend>
		<div class='field'>
			<%= f.label :destinatario %><br>
			<%= f.text_field :receiver,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :monto %><br>
			<%= f.number_field :amount, :step => 0.01,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :fecha_de_emision %><br>
			<%= f.date_field :date,:required => true %>
		</div>
		</fieldset>
		<fieldset>
		<legend>Detalles</legend>
		<div class='field'>
			<%= f.label :detalles %><br>
			<%= f.text_area(:details, {size: "30x20", :maxlength => 160,:required => true}) %>
		</div>
		<div class='actions'>
		<%= f.submit 'Modificar' %>
		</div>
		</fieldset>
	<% end %>
</body>
</html>