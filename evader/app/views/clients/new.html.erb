<!DOCTYPE html>
<html>
<head>
	<title></title>
</head>
<body>
	<h1>Crear cliente</h1>
	<%= form_for (@cliente) do |f| %>
		<div class='field'>
			<%= f.label :nombre %><br>
			<%= f.text_field :name ,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :apellido %><br>
			<%= f.text_field :last_name,:required => true  %>
		</div>
		<div class='field'>
			<%= f.label :dNI %><br>
			<%= f.number_field :dni, min:10000000, max:99999999 ,:required => true %>
		</div>
		<div class='field'>
			<%= f.label :fecha_de_nacimiento %><br>
			<%= f.date_field :birthdate,:required => true  %>
		</div>
		<div class='field'>
			<%= f.radio_button(:gender, "male") %>
			<%= f.label(:gender_male, "Varon") %>
			<%= f.radio_button(:gender, "female") %>
			<%= f.label(:gender_female, "Mujer") %>
		</div>
		<div class='field'>
			<%= f.radio_button(:cu_type, "cuit") %>
			<%= f.label(:cu_type_cuit, "CUIT") %>
			<%= f.radio_button(:cu_type, "cuil") %>
			<%= f.label(:cu_type_cuil, "CUIL") %>
		</div>
		<div class='field'>
			<%= f.label :numero %><br>
			<%= f.text_field :cu_value , pattern:/[\d{2}]+\-[\d{8}]+\-[\d{1}]/ ,:required => true %>
		</div>
		
		<%= fields_for :contacts do |c| %>
    		<div class='field'>
    		<%= c.label :tipo_de_contacto %><br>
    		<%= c.select :type_cont, [['TelÃ©fono','telefono'],[ 'Email','email'],['Skype','skype'],[ 'DirecciÃ³n postal','dir_postal']],:required => true  %> <br>	
    		</div>
    		<div class='field'>
    		<%= c.label :forma_de_contacto %><br>
    		<%= c.text_field :value_cont ,:required => true %>
    		</div>
    	<% end %>


		<div class='actions'>
		<%= f.submit 'Registrar' %>
		</div>
		<% end %>
		<%= link_to 'Atras', clients_path %>
	
</body>
</html>